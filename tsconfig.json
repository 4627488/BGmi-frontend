{
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "allowJs": true,
    "noImplicitAny": true,
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "mocha",
      "chai",
      "vuetify",
      "./node_modules/vue/types"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "./dist/"
  },
  "include": [
    "src/",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
